# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_API_ENDPOINT=https://generativelanguage.googleapis.com

# Google Cloud Configuration (Optional)
GOOGLE_CLOUD_PROJECT_ID=your_gcp_project_id
GOOGLE_CLOUD_REGION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Application Configuration
NEXT_PUBLIC_APP_NAME=Tokyo OpenData AI Assistant
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_ENABLE_VOICE=true
NEXT_PUBLIC_ENABLE_MULTILANG=true
NEXT_PUBLIC_MAX_SESSION_DURATION=3600000
NEXT_PUBLIC_MAX_MESSAGES_PER_SESSION=50

# Development Configuration
NODE_ENV=development
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000

# OpenData Configuration
OPENDATA_CATALOG_URL=https://catalog.data.metro.tokyo.lg.jp
OPENDATA_STORAGE_URL=https://data.storage.data.metro.tokyo.lg.jp